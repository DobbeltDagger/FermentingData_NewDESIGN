                {{ rs.data.description }}
                <span class='link'><a href="{{ rs.url }}">read more</a></span>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}

    {% endfor %}
  {% endif %}

  <!-- <p><a href='/resources'>&uarr; Return to all resources overview</a></p> -->

{% endblock rightContent %}