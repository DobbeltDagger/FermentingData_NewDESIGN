                {{ rs.data.description }}
                <span class='link'><a href="{{ rs.url }}">read more</a></span>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <!-- check for design -->
      {% if tag == 'design' %}
        <h3>Design</h3>
        <div class='resourceWrapper'>
          {% for rs in collections.design %}
            <div class='rs'>
              <!-- <p>{{ rs.Tags }}</p> // doesnt work -->
              <!-- <div class='img'><a href='{{ rs.url }}'><img src='{{ rs.data.thumbUrl }}'></a></div> -->
              <div class='info'>
                <span class='title'>{{ rs.data.title }}</span>
                {{ rs.data.description }}
                <span class='link'><a href="{{ rs.url }}">read more</a></span>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}

      <!-- check for design -->
      {% if tag == 'research' %}
        <h3>Research</h3>
        <div class='resourceWrapper'>
          {% for rs in collections.research %}
            <div class='rs'>
              <!-- <p>{{ rs.Tags }}</p> // doesnt work -->
