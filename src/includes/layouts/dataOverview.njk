{% extends "base.njk" %}


{% block mainContent %}

  <!-- all resources ************************************************ -->
  <h2 class='pageCategory'>Data</h2>

  <div class='dataWrapper'>
    {% for dt in collections.data %}
      <div class='dt'>
        <div class='img'><a href='{{ dt.url }}'><img src='{{ dt.data.thumbUrl }}'></a></div>
        <div class='info'>
          <span class='title'>{{ dt.data.title }}</span>
          {{ dt.data.description }}
          <span class='link'><a href="{{ dt.url }}">read more</a></span>
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock mainContent %}



