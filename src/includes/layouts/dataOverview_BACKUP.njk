{% extends "base.njk" %}

<!-- content in left column ---------------------------------------------- -->
{% block leftContent %}

  <!-- all resources -->
  <h2>Data</h2>
  <p>A list of resources that are being used, or referenced, frequently in the code&share workshops. Links open in new windows</p>
  <div class='resourceWrapper'>
    {% for rs in collections.resource %}
      <div class='rs'>
        <div class='img'><a href='{{ rs.url }}'><img src='{{ rs.data.thumbUrl }}'></a></div>
        <div class='info'>
          <span class='title'>{{ rs.data.title }}</span>
          {{ rs.data.description }}
          <!-- <span class='link'><a href="{{ rs.data.url }}" target="_blank">{{ rs.data.urlTitle }}</a></span> -->
          <span class='link'><a href="{{ rs.url }}">read more</a></span>
        </div>
      </div>
    {% endfor %}
  </div>

