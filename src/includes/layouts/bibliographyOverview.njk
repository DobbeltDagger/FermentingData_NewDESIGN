  <div class='bibWrapper'>
    {% for rs in collections.bibliography %}
      <div class='bib'>
        <div class='info'>
          <span class='title'>{{ rs.data.title }}</span>
          Author: {{ rs.data.author }}<br/>
          Publisher: {{ rs.data.publisher }}
          <!-- summary: {{ rs.data.summary }} -->
          <!-- <span class='link'><a href="{{ rs.url }}">read more</a></span> -->
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock leftContent %}


