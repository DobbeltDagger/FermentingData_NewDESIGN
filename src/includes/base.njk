          </div>
        </div>
      </div>

      <!-- main section, full width -->
      <div class='Grid Grid--guttersLg'>
        <div class="Grid-cell">
          <section id="main">
            {% block mainContent %}{{ content | safe }}{% endblock mainContent %}
          </section>
        </div>
      </div>

      <!-- sections, in grid -->
      <div class="Grid Grid--guttersLg">

        <!-- left -->
        <div class="Grid-cell g3of5">
          <section id="mainLeft">
            {% block leftContent %}{{ content | safe }}{% endblock leftContent %}
          </section>
        </div>

        <!-- right -->
        <div class="Grid-cell g2of5">
          <section id="mainRight">
            {% block rightContent %}{% endblock rightContent %}
          </section>
        </div>

      </div>

    </div>

